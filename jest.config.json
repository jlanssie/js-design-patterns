{
  "preset": "ts-jest",

  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],

  "testEnvironment": "node",

  "verbose": true,

  "cache": true,

  "reporters": ["default"],

  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.{js,ts}", "!**/node_modules/**"],
  "coveragePathIgnorePatterns": ["<rootDir>/dist/", "\\.d\\.ts$"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "statements": 100,
      "lines": 100
    }
  },

  "moduleDirectories": ["node_modules", "src"]
}
