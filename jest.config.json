{
  "preset": "ts-jest",
  "testMatch": ["**/*.test.ts"],
  "testEnvironment": "node",
  "reporters": ["default"],
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.{js,ts}"],
  "coveragePathIgnorePatterns": ["<rootDir>/dist/", "<rootDir>/node_modules/"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "statements": 100,
      "lines": 100
    }
  },
  "moduleDirectories": ["node_modules", "src"]
}
